{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VibeCast",
  "version": "0.2.1",
  "identifier": "com.zayenz.vibe-cast",
  "build": {
    "beforeDevCommand": "cd ../.. && npm run dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd ../.. && npm run build",
    "frontendDist": "../../../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Control Plane",
        "width": 800,
        "height": 600,
        "resizable": true
      },
      {
        "label": "viz",
        "title": "VibeCast",
        "width": 1280,
        "height": 720,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../../dist": "dist",
      "../../resources/kittens": "kittens"
    }
  }
}